# vim: ft=gitconfig
[user]
	name = Yochem van Rosmalen
	email = git@yochem.nl

[init]
	defaultBranch = main

[core]
	pager = less -x1,5,9,13,17,21,25,29,33,37,41,45,49,53,57,61,65,69,73,77,81

[pager]
	diff = true

[help]
	autocorrect = 1

[alias]
	# View the current working tree status using the short format
	s = status -s

	# show diff summary
	diffsum = diff master --compact-summary

	# commit all files that have been modified or removed, new files not
	# affected
	ca = commit -a

	# View url to Github
	url = config --get remote.origin.url

	# List aliases
	aliases = config --get-regexp alias

	# List contributors with number of commits
	contributors = shortlog --summary --numbered

	# find author of specific commit
	author = show -s --format='%an <%ae>'

	# also show remote branches
	branches = branch -a

	# I always forgot these
	unadd = reset
	uncommit = reset HEAD^

	# log a pretty graph to show commits
	graph = log --graph --pretty=format:'%Cred%h%Creset (%an) -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit

	# check last commit
	last = log -1 HEAD

	# git status for every local branch
	branch-status = !branch_status

	# see all files tracked
	files = ls-tree --full-tree -r --name-only HEAD

[log]
	date = auto:human

[commit]
	template = ~/Library/Config/git/commit-template

[color "branch"]
	current = green
	local = normal
	remote = yellow

[color "status"]
	added = green
	changed = yellow
	untracked = red

[hub]
	protocol = ssh

[merge]
	tool = vimdiff

[mergetool]
	prompt = false

[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL
[pull]
	rebase = false

[push]
	autoSetupRemote = true
