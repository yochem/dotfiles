# macos-non-native-fullscreen = true
auto-update-channel = tip
background = #1f2124
confirm-close-surface = false
cursor-style-blink = false
font-family = Menlo
font-size = 14
keybind = command+k=text:\x0c
keybind = command+t=prompt_surface_title
macos-icon = xray
macos-titlebar-proxy-icon = hidden
mouse-hide-while-typing = true
window-inherit-working-directory = true
window-new-tab-position = end
window-padding-x = 10
window-padding-y = 8, 6
resize-overlay-position = bottom-left

# tmux style bindings

# most important "goto previous tab" is not supported yet

keybind = backquote>e=text:\x60
keybind = backquote>c=new_tab
keybind = backquote>x=close_surface
keybind = backquote>shift+x=close_tab
keybind = backquote>d=close_window

keybind = backquote>comma=prompt_surface_title
keybind = backquote>z=undo
keybind = backquote>shift+semicolon=toggle_command_palette

keybind = backquote>equal=equalize_splits
keybind = backquote>shift+backslash=new_split:right
keybind = backquote>minus=new_split:down
keybind = backquote>h=goto_split:left
keybind = backquote>j=goto_split:down
keybind = backquote>k=goto_split:up
keybind = backquote>l=goto_split:right

keybind = backquote>arrow_left=move_tab:-1
keybind = backquote>arrow_right=move_tab:1
keybind = backquote>p=previous_tab
keybind = backquote>n=next_tab
keybind = backquote>1=goto_tab:1
keybind = backquote>2=goto_tab:2
keybind = backquote>3=goto_tab:3
keybind = backquote>4=goto_tab:4
keybind = backquote>5=goto_tab:5
keybind = backquote>6=goto_tab:6
keybind = backquote>7=goto_tab:7
keybind = backquote>8=goto_tab:8
keybind = backquote>9=goto_tab:9

keybind = backquote>bracket_right=jump_to_prompt:-1
keybind = backquote>bracket_left=jump_to_prompt:+1
