# macos-non-native-fullscreen = true
auto-update-channel = tip
background = #1f2124
confirm-close-surface = false
copy-on-select = clipboard
cursor-style-blink = false
font-family = Menlo
font-size = 14
keybind = command+k=text:\x0c
macos-icon = xray
macos-titlebar-proxy-icon = hidden
mouse-hide-while-typing = true
window-inherit-working-directory = true
window-new-tab-position = end
window-padding-x = 10
window-padding-y = 8, 6
resize-overlay-position = bottom-left

# tmux style bindings
# most important "goto previous tab" is not supported yet
keybind = backquote=activate_key_table_once:tmux
keybind = tmux/

keybind = tmux/e=text:\x60
keybind = tmux/c=new_tab
keybind = tmux/x=close_surface
keybind = tmux/shift+x=close_tab
keybind = tmux/d=close_window

keybind = tmux/comma=prompt_surface_title
keybind = tmux/z=undo
keybind = tmux/shift+semicolon=toggle_command_palette

keybind = tmux/equal=equalize_splits
keybind = tmux/shift+backslash=new_split:right
keybind = tmux/minus=new_split:down
keybind = tmux/h=goto_split:left
keybind = tmux/j=goto_split:down
keybind = tmux/k=goto_split:up
keybind = tmux/l=goto_split:right

keybind = tmux/arrow_left=move_tab:-1
keybind = tmux/arrow_right=move_tab:1
keybind = tmux/p=previous_tab
keybind = tmux/n=next_tab
keybind = tmux/1=goto_tab:1
keybind = tmux/2=goto_tab:2
keybind = tmux/3=goto_tab:3
keybind = tmux/4=goto_tab:4
keybind = tmux/5=goto_tab:5
keybind = tmux/6=goto_tab:6
keybind = tmux/7=goto_tab:7
keybind = tmux/8=goto_tab:8
keybind = tmux/9=goto_tab:9

keybind = tmux/bracket_left=jump_to_prompt:-1
keybind = tmux/bracket_right=jump_to_prompt:+1
keybind = tmux/escape=deactivate_key_table

